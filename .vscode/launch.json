{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run any src script with correct imports",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}" 
      }
    },

    {
      "name": "Python: Run CQC Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/CQC_test.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  ]
}
